= render 'shared/left_contents'

.right_contents
  .right_contents__top
    .right_contents__top__group
      = @group.name
    = link_to "Edit", group_messages_path(@group), class:"right_contents__top__edit"
    .right_contents__top__members
      Member:
      - @group.users.each do |user|
        = " #{user.name}"
  .right_contents__messages
    = render partial: 'message',collection: @group.messages
  .right_contents__input
    = form_for [@group, @message] do |f|
      = f.text_field :body, class:"right_contents__input__text", placeholder:"type a message"
      .mask
        %label
          = f.file_field :image, class:"right_contents__input__file"
          %i.fa.fa-picture-o{style:"font-size: 20px;"}
      = f.submit "Send",class:"right_contents__input__submit"
